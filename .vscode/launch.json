{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TS with ts-node",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/src/index.ts" // O caminho para o seu arquivo de entrada (onde o seu servidor Ã© iniciado)
            ],
            "autoAttachChildProcesses": true,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}